<Page x:Class="BenchmarkClient.TestSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="TestSelectionPage">

    <Grid>
        <StackPanel>
            <Button x:Name="requestTestBtn" Click="requestTestBtn_Click" Style="{DynamicResource ButtonGreen}" HorizontalAlignment="Center" VerticalAlignment="Center" Content="REQUEST" FontSize="16" FontFamily="Nirmala UI" Foreground="White" FontWeight="ExtraBold" Padding="10,5" Margin="0,20,0,0" Width="133"/>
            <Button x:Name="broadcastTestBtn" Click="broadcastTestBtn_Click" Style="{DynamicResource ButtonGreen}" Content="BROADCAST" FontFamily="Nirmala UI" FontSize="16" FontWeight="ExtraBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" Padding="10,5" Width="133"/>
        </StackPanel>
    </Grid>
</Page>
